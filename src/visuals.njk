{% pageHeading  "Visuals", "Notes and projects across different mediums"%}


<section class="card-list">

    <ul role="list" class="card-list-layout">
        {% for thing in visuals.mediums %}
        <li class="card-image ">   
            <a href="{{ thing.galleryURL }}">
                <picture
                    type="image/jpg"
                    srcset= {{ thing.srcSet }} 
                    >
                    <img 
                    
                    srcset= {{ thing.srcSet }} 
                    sizes="(max-width:800px) 300px, 400px, 650px"
                    src= {{thing.imgURLbig}}
                    alt= {{ thing.title }}
                    loading="lazy"
                    class="card-image" />
                </picture>
            </a>
        </li>
        {% endfor %}
    </ul>
</section>